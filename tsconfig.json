{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./docs/",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "module": "commonjs",
    "allowJs":true,
    "noImplicitAny": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "hazelnut-ui/lib": ["src"],
      "hazelnut-lib": ["src"],
      "hazelnut-ui": ["src/index"]
    }
  },
  "reflectionEnabled": true,
  "include": [
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    ".git"
  ]
}
